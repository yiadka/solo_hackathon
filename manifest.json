{
    "manifest_version": 3,
    "name": "Click Dark Mode",
    "description": "Click to toggle dark mode",
    "version": "1.0.0",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
         "matches": [
            "http://*/*",
            "https://*/*"
        ],
        "css": [ "content_styles.css" ],
        "js": [ "content_scripts.js" ]
     }
    ]
}